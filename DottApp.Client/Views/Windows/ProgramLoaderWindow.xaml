<Window x:Class="DottApp.Client.Views.Windows.ProgramLoaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DottApp.Client.Views.Windows"
        xmlns:vm="clr-namespace:DottApp.Client.ViewModels"
        mc:Ignorable="d"
        Title="ProgramLoaderWindow" Height="180" Width="320" 
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True"
        >
    <Window.DataContext>
        <vm:ProgramLoaderViewModel/>
    </Window.DataContext>
    <Grid>
        <ProgressBar Value="{Binding ProgressBarValue}" 
                     Margin="10,164,10,10" />
    </Grid>
</Window>
